[logic]
active = sr_idle@random

[sr_idle@random]
on_info = {!is_day} sr_idle@night, {=is_day !actor_in_zone(val_gunnery_zone) !actor_in_zone(val_fixer_zone)} sr_idle@end_random_idle

[sr_idle@end_random_idle]
on_game_timer = 150 | sr_idle@end_random %=play_sound(val_freedom_megafon)%

[sr_idle@end_random]
on_signal = sound_end | sr_idle@pause

[sr_idle@pause]
on_timer = 40000 | sr_idle@random |

[sr_idle@night]
on_signal = sound_end | sr_idle@pause_night

[sr_idle@pause_night]
on_info = {=is_day} sr_idle@random
;on_info2 = {=surge_started} sr_idle@surge
