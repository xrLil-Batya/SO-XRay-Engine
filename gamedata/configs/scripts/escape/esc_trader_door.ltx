[logic]
active = ph_door@near

[ph_door@locked]
tip = tip_door_locked
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@close]
tip = tip_door_open
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {=actor_in_zone(esc_space_restrictor_trade_door_into)} ph_door@near

[ph_door@near]
tip = tip_door_open
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open

[ph_door@open]
tip = tip_door_close
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@near
on_info = {!actor_in_zone(esc_space_restrictor_trade_door_into)} ph_door@close